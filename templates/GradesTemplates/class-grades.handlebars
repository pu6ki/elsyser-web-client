<div class="panel panel-default">
    <div class="heading text-center panel-body">
        <h3>{{currentClass.classNumber}}{{currentClass.classLetter}} class</h3>
    </div>
</div>

<div id="table-wrapper">
    <table class="table table-responsive table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">â„–</th>
                <th class="text-center">Name</th>
                <th class="text-center">Grades</th>
                <th class="text-center">Average Grade</th>
            </tr>
        </thead>
        <tbody>
            {{#each studentsInClass}}
            <tr>
                <td class="text-center">{{classNumber}}</td>
                <td class="text-center">{{user.first_name}} {{user.last_name}}</td>
                <td class="text-center" id="{{user.username}}-grades"></td>
                <td class="text-center" id="{{user.username}}-average-grade"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <button class="btn btn-circle btn-lg btn-bottom" id="add-grades">
        <i class="glyphicon glyphicon-pencil"></i>
    </button>
</div>