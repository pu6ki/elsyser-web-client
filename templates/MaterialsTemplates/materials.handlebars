<div id="wrapper">
    {{#if materials}}
        {{#each materials}}
            <div class="panel panel-primary">
                <div class="panel-heading material-panel-heading text-center">
                    <strong>
                        {{subject.title}}
                    </strong>
                </div>
                <div class="panel-body text-center">
                    <h4 class="material-title">{{title}}</h4>
                    <h5 class="material-section">{{section}}</h5>
                    <div id="content">{{content}}</div>
                    <hr />
                    Posted by
                    <a href="#/profile/{{author.user.id}}">
                        <span><strong><i>{{author.user.username}}</i></strong></span>
                    </a>

                    <button id="info-button" class="btn btn-primary" onclick="window.location.href = '#/materials/{{subject.id}}/{{id}}'"><a class="heading-anchor" href="#/materials/{{subject.id}}/{{id}}">Info</a></button>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 class="text-center">There are no available materials so far.</h3>
            </div>
        </div>
    {{/if}}

    {{#if isTeacher}}
        <button type="button" class="btn btn-primary btn-circle btn-lg" id="add-material">
            <i class="glyphicon glyphicon-pencil"></i>
        </button>
    {{/if}}
</div>
