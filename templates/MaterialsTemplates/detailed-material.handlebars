<div id="wrapper">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
            <div class="panel panel-primary">
                <div class="panel-heading center-text">
                    <strong>
                        {{section}}
                    </strong>
                    {{#if editable}}
                    <div class="pull-right edit">
                        <span id="material-{{id}}-edit" class="edit"><span class="glyphicon glyphicon-edit"></span></span>
                        <span id="material-{{id}}-delete" class="delete"><span class="glyphicon glyphicon-trash"></span></span>
                    </div>
                    {{/if}}
                </div>
                <div class="panel-body center-text">
                    <h4>{{title}}</h4>
                    <article>
                        {{{content}}}
                    </article>
                    <br />
                    {{#if video_url}}
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="{{video_url}}" allowfullscreen></iframe>
                        </div>
                    {{/if}}
                    <br />
                
                    Posted by
                    <a href="#/profile/{{author.user.id}}">
                        <span><strong><i>{{author.user.username}}</i></strong></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
