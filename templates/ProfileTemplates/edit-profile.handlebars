<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
        <div class="panel panel-primary">
            <div class="panel-heading">
                {{#if clazz}}
                    <strong>Student profile</strong>
                {{else}}
                    <strong>Teacher profile</strong>
                {{/if}}
            </div>
            <div class="row">
                <img src="{{profile_image_url}}" alt="Profile Image" class="col-xs-6 col-md-4" id="profile-image">
                <div class="col-xs-6 col-md-4 form-wrapper" id="profile-info">
                    {{#with user}}
                        <div>
                            <strong><i>Username:</i></strong>
                            <input class="form-control" id="new-username" type="text" value="{{username}}">
                        </div>
                        <div>
                            <strong><i>First name:</i></strong>
                            <input class="form-control" id="new-first-name" type="text" value="{{first_name}}">
                        </div>
                        <div>
                            <strong><i>Last name:</i></strong>
                            <input class="form-control" id="new-last-name" type="text" value="{{last_name}}">
                        </div>
                    {{/with}}
                    <div>
                        <strong><i>About:</i></strong>
                        <input class="form-control" id="new-info" type="text" value="{{info}}">
                    </div>
                    <div>
                        <strong><i>Profile image url:</i></strong>
                        <input class="form-control" id="new-profile-image-url" type="text" value="{{profile_image_url}}">
                    </div>
                    <button id="save-button" class="btn btn-primary submit">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>