<div id="wrapper">
    {{#if homeworks}}
        <div class="row">
            {{#each homeworks}}
                <div class="col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
                    <div class="panel panel-primary text-center">
                        <div class="panel-heading">
                            <strong>
                                {{subject.title}}
                            </strong>
                        </div>
                        <div class="panel-body">
                            <div id="deadline">
                                <i>Deadline </i><strong><span>{{deadline}}</span></strong>
                            </div>
                            <div id="details">
                                {{#if details}}
                                    <i>Details: </i><strong><span>{{details}}</span></strong>
                                {{else}}
                                    <i>No details provided.</i>
                                {{/if}}
                            </div>

                            <hr />

                            Posted by
                            <a href="#/profile/{{author.user.id}}">
                                <span><strong><i>{{author.user.username}}</i></strong></span>
                            </a>

                            <button id="info-button" class="btn btn-primary" onclick="window.location.href = '#/homeworks/{{id}}'"><a class="heading-anchor" href="#/homeworks/{{id}}">Info</a></button>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 class="text-center">There are no assigned homeworks so far.</h3>
                </div>
            </div>
        {{/if}}
        </div>
        
    {{#if isTeacher}}
        <button type="button" class="btn btn-primary btn-circle btn-lg" id="add-homework">
            <i class="glyphicon glyphicon-pencil"></i>
        </button>
    {{/if}}
</div>
