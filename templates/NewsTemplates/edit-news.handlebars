<div id="wrapper">
    <div class="form-wrapper">
        <strong>
            <i><label class="label-center" for="new-news-title">Edit title</label></i>
            <input class="form-control" id="new-news-title" name="new-news-title" type="text" value="{{title}}"> 
        </strong>
        <div>
            <strong>
                <i>
                    <label class="label-center" for="new-news-content">Edit content</label>
                    <textarea class="form-control" id="new-news-content" name="new-news-content">{{content}}</textarea> 
                </i>
            </strong>
        </div>
        <button id="save-button" class="center-block btn btn-primary submit">Save</button>
    </div>
</div>