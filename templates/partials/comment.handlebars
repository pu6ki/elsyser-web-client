<div class="row comment new-comment" id="comment-{{id}}">
    <div class="col-xs-2 col-md-1 img-container">
        <img class="user-photo" src="{{posted_by.profile_image_url}}">
    </div>

    <div class="col-xs-9 col-md-10">
        <div class="comment-panel panel panel-default">
            <div class="panel-heading">
                <a href="#/profile/{{posted_by.user.id}}">
                    <strong>{{posted_by.user.username}}</strong>
                </a>
                commented {{formatRelative posted_on}}
                {{#if editable}}
                    <div class="pull-right edit-comments">
                        <span id="news-{{newsId}}-edit-comment-{{id}}" class="edit">
                            <span class="glyphicon glyphicon-edit"></span>
                        </span>
                        <span id="news-{{newsId}}-delete-comment-{{id}}" class="delete">
                            <span class="glyphicon glyphicon-trash"></span>
                        </span>
                    </div>
                {{/if}}
            </div>
            <div class="panel-body">
                {{content}}
            </div>
        </div>
    </div>
</div>
